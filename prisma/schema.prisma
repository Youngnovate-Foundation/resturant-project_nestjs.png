generator client {
  provider = "prisma-client-js"
}
// PostgreSQL database connection
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// User model representing application users
model User {
  id        Int        @id @default(autoincrement())
  name      String?
  email     String     @unique
  phone     String?    @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  role      String     @default("USER")
  cartItems CartItem[]
  orders    Order[]
}
// Admin model for administrative users
model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
// Category model for organizing items
model Category {
  id     Int      @id @default(autoincrement())
  name   String
  drinks Drink[]
  foods  Food[]
  others Others[]
}
// Food model representing food items
model Food {
  id         Int         @id @default(autoincrement())
  name       String
  imageUrl   String?
  categoryId Int?
  createdAt  DateTime    @default(now())
  price      Float?
  cartItems  CartItem[]
  category   Category?   @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]
  packages   Package[]
}
// Drink model representing drink items
model Drink {
  id         Int         @id @default(autoincrement())
  name       String
  imageUrl   String?
  price      Float
  categoryId Int?
  createdAt  DateTime    @default(now())
  cartItems  CartItem[]
  category   Category?   @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]
  packages   Package[]
}
// Order model representing customer orders
model Order {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  status    String      @default("pending")
  total     Float
  userId    Int
  user      User?       @relation(fields: [userId], references: [id])
  items     OrderItem[]
}
// OrderItem model representing items within an order
model OrderItem {
  id       Int    @id @default(autoincrement())
  orderId  Int
  foodId   Int?
  drinkId  Int?
  othersId Int?
  quantity Int
  price    Float?
  drink    Drink? @relation(fields: [drinkId], references: [id])
  food     Food?  @relation(fields: [foodId], references: [id])
  others   Others? @relation(fields: [othersId], references: [id])
  order    Order  @relation(fields: [orderId], references: [id])
}
// CartItem model representing items in a user's cart
model CartItem {
  id       Int      @id @default(autoincrement())
  userId   Int
  foodId   Int?
  packageId Int?
  location String?
  notes    String?
  drinkId  Int?
  othersId  Int?
  quantity Int      @default(1)
  price    Float?
  addedAt  DateTime @default(now())
  
  drink    Drink?   @relation(fields: [drinkId], references: [id])
  food     Food?    @relation(fields: [foodId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
  others   Others?  @relation(fields: [othersId], references: [id])

  @@unique([userId, foodId, drinkId, othersId])
}
// PasswordReset model for handling password reset tokens
model PasswordReset {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}
// Package model representing food packages
model Package {
  id          Int      @id @default(autoincrement())
  price       Float
  foodId      Int?
  othersId     Int?
  imageUrl    String?
  createdAt   DateTime @default(now())
  description String?
  name        String
  food        Food?     @relation(fields: [foodId], references: [id])
  others      Others?   @relation(fields: [othersId], references: [id])
  drinkId     Int?
  drink       Drink?    @relation(fields: [drinkId], references: [id])
}
// Others model containing additional items like sides or desserts
model Others {
  id         Int      @id @default(autoincrement())
  name       String
  imageUrl   String?
  price      Float?
  categoryId Int?
  createdAt  DateTime @default(now())

  category Category? @relation(fields: [categoryId], references: [id])
  cartItems  CartItem[]
  orderItems OrderItem[]
  packages   Package[]
  
}
